<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme1" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="nombreCategoria">
        <item name="android:textColorPrimary">@color/album_titulo</item>
        <item name="android:background">@color/album_background</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/categoria_titulo_padding</item>
        <item name="android:layout_marginRight">@dimen/categoria_titulo_padding</item>
        <item name="android:layout_marginTop">@dimen/categoria_titulo_padding</item>
        <item name="android:textSize">@dimen/tv_categoria_titulo</item>
        <item name="android:textColor">@color/album_titulo</item>
        <item name="android:padding">8dp</item>
        <item name="android:alpha">0.80</item>
        <item name="android:maxLength">18</item>
    </style>

    <style name="albumRecyclerView">
        <item name="android:paddingLeft">@dimen/recyclerViewAlbumPaddingLeft</item>
        <item name="android:paddingTop">@dimen/recyclerViewAlbumPaddingTop</item>
        <item name="android:textSize">@dimen/tvRecyclerViewTitulo</item>
        <item name="android:textColor">@color/album_titulo</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="nombreAlbum">
        <item name="android:textColorPrimary">@color/album_titulo</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/tv_album_titulo</item>
        <item name="android:textColor">@color/album_titulo</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLength">18</item>
    </style>

    <style name="fanYduracionAlbum">
        <item name="android:textColorPrimary">@color/album_titulo</item>
        <item name="android:textSize">@dimen/tv_album_titulo</item>
        <item name="android:textColor">@color/album_titulo</item>
    </style>parent="@android:style/Theme.Material.Dialog"

    <style name="pistaViewPage">
        <item name="android:textColor">@color/album_titulo</item>
        <item name="android:colorBackground">@color/mainBackground</item>
        <item name="android:alpha">0.95</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@drawable/background_view_page_pista</item>
    </style>


</resources>
