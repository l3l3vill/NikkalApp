<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="5dp"
        card_view:cardCornerRadius="10dp"
        card_view:cardPreventCornerOverlap="false"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainBackground">

    <ImageView
        android:id="@+id/ivEscuchadoRecientemente"
        tools:src="@drawable/ic_album_24dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="4dp"
        />

    <TextView
        android:id="@+id/tvTituloEscuchadoRecientemente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@string/tv_titulo_escuchadas_recientemente"
        android:layout_alignTop="@id/ivEscuchadoRecientemente"
        android:layout_toRightOf="@id/ivEscuchadoRecientemente"
        android:textSize="20sp"
        android:textColor="@color/album_titulo"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"/>

        <TextView
            android:id="@+id/tvSubTituloEscuchadoRecientemente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/tv_subtitulo_escuchadas_recientemente"
            android:layout_alignBottom="@id/ivEscuchadoRecientemente"
            android:layout_toRightOf="@id/ivEscuchadoRecientemente"
            android:textSize="15sp"
            android:textColor="@color/album_titulo"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"/>


    </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>