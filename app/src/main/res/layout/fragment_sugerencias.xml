<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.categorias.SugerenciasFragment"
    android:background="@drawable/background_bg">

    <ImageView
        android:id="@+id/ivImagenSugerencia"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logonikkal"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tvtituloSugerencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="174dp"
        android:text="SUGERENCIA"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/album_titulo"
        android:textStyle="bold"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvTracksSugerencias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivImagenSugerencia"/>

</RelativeLayout>