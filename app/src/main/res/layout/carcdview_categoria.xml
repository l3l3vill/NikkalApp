<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/card_imagen_wigth"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/card_view_categoria_margin"
        android:layout_marginRight="@dimen/card_view_categoria_margin">

        <ImageView
            android:id="@+id/imagenCategoria"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_imagen_height"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tituloCategoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imagenCategoria"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:theme="@style/nombreCategoria" />

    </android.support.v7.widget.CardView>


</FrameLayout>

